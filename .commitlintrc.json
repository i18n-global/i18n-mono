{
  "extends": [],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "test",
        "chore",
        "revert"
      ]
    ],
    "scope-enum": [
      2,
      "always",
      ["core", "tools", "demo"]
    ],
    "scope-empty": [2, "never"],
    "subject-empty": [2, "never"],
    "type-empty": [2, "never"],
    "type-case": [2, "always", "lower-case"],
    "scope-case": [2, "always", "lower-case"]
  },
  "parserPreset": {
    "parserOpts": {
      "headerPattern": "^(\\w+)\\[(\\w+)\\]:\\s(.+)$",
      "headerCorrespondence": ["type", "scope", "subject"]
    }
  }
}

