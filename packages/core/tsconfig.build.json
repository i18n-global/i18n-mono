{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "types": []
  },
  "include": [
    "src/components/**/*",
    "src/hooks/**/*",
    "src/utils/**/*",
    "src/scripts/**/*",
    "src/bin/**/*",
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.*",
    "**/*.spec.*",
    "sample/**/*",
    "src/__tests__/**/*",
    "src/setupTests.ts"
  ]
}
